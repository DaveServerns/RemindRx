<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.newwesterndev.remindrx">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SundayActivity" />
        <activity android:name=".MondayActivity" />
        <activity android:name=".TuesdayActivity" />
        <activity android:name=".WednesdayActivity" />
        <activity android:name=".ThursdayActivity" />
        <activity android:name=".FridayActivity" />
        <activity android:name=".SaturdayActivity"></activity>
    </application>

</manifest>